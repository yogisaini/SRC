<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Staff Reporting & Communication</title>

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

	<!-- DataTables CSS -->
	<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css">

	<!-- Select2 CSS -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme/dist/select2-bootstrap-5-theme.min.css">
	<link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
	<!-- Navbar -->
	<div class="wrapper">
		<header class="border-bottom-2 text-white bg-light shadow">
			<nav class="navbar navbar-expand-lg navbar-dark mb-1 py-0" style="background: linear-gradient(25deg, #fff, gray);">
				<div class="container-fluid">
					<a class="navbar-brand d-flex align-items-center" href="#">
						@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
						{
							<a class="navbar-brand d-flex align-items-center" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
								<img src="~/img/logo.png" alt="Logo" class="img-fluid" style="height: 70px;">
							</a>
						}
						else if (User.Identity.IsAuthenticated && User.IsInRole("User") || User.IsInRole("Default"))
						{
							<a class="navbar-brand d-flex align-items-center" asp-area="User" asp-controller="Dashboard" asp-action="Index">
								<img src="~/img/logo.png" alt="Logo" class="img-fluid me-2" style="height: 70px;">
							</a>
						}
						else if (User.Identity.IsAuthenticated && User.IsInRole("Manager"))
						{
							<a class="navbar-brand d-flex align-items-center" asp-area="Manager" asp-controller="Dashboard" asp-action="Index">
								<img src="~/img/logo.png" alt="Logo" class="img-fluid me-2" style="height: 70px;">
							</a>
						}
						else
						{
							<img src="~/img/logo.png" alt="Logo" class="img-fluid me-2" style="height: 70px;">
						}
					</a>
					<!-- Brand -->
					<!-- Navbar Toggler for Small Screens -->
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<!-- Navbar Links -->
					<div class="collapse navbar-collapse" id="navbarContent">
						<!-- <span class="text-center h5">Staff Report Management System</span>
						Right-Side Links -->
						<ul class="navbar-nav ms-auto">							
							<!-- Authentication Links -->
							@if (User.Identity.IsAuthenticated)
							{
								<li class="nav-item">
									<a href="javascript:void(0);" class="btn btn-light btn-sm m-2" onclick="document.getElementById('logout-form').submit();"><i class="fa fa-sign-out" aria-hidden="true"></i></a>
									<form id="logout-form" asp-area="" asp-controller="Account" asp-action="Logout" method="post" style="display:none;">
										@Html.AntiForgeryToken()
									</form>
								</li>
								<li class="nav-item">
									<div id="notificationsContainer"></div>
								</li>
								<li class="nav-item">
									<a class="nav-link text-white">Welcome, @User.Identity.Name <i class="fa fa-user"></i></a>
								</li>

							}
						</ul>
					</div>
				</div>
			</nav>
		</header>
		<div class="container-fluid content">
			<!-- Main Content -->
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
			<!-- Footer -->

		</div>
		<footer class="footer border-bottom-2 mt-3 py-3 text-white bg-light shadow" style="background: linear-gradient(to right, #cc3300, #ffcc00);">
			<div class="container ">
				<p class="mt-3 mb-0 fw-bold">&copy; 2025 - SRC. All Rights Reserved.</p>
			</div>
		</footer>
	</div>
	<!-- Scripts -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-lite.min.css" rel="stylesheet">

	<!-- Scripts -->
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

	<!-- DataTables JS -->
	<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>

	<!-- Select2 JS -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

	<!-- jQuery Validation -->
	<script src="https://cdn.jsdelivr.net/npm/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.18/summernote-lite.min.js"></script>
	<!-- Custom Scripts -->
	<script src="~/js/site.js" asp-append-version="true"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>