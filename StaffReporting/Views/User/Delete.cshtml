@model Management.Models.Users
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <p>Are you sure you want to delete this user?</p>
    <dl class="row">
        <dt class="col-sm-3">Username</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@Model.Role</dd>

        <dt class="col-sm-3">Is Active</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>

        <dt class="col-sm-3">Project Creation</dt>
        <dd class="col-sm-9">@(Model.permission ? "Active" : "Inactive")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Confirmed Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
