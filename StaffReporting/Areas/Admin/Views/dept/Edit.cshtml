@model Management.Models.Dept

<div class="container mt-4">
	<h1>Edit Department</h1>
	<form asp-action="Edit" method="post" class="needs-validation" novalidate>
		<input type="hidden" asp-for="DeptId" />
		<input type="hidden" asp-for="CreatedBy" />
		<div class="row mb-3">
			<div class="col-md-6">
				<label asp-for="DeptName" class="form-label"></label>
				<input asp-for="DeptName" class="form-control" required />
				<span asp-validation-for="DeptName" class="text-danger"></span>
			</div>
			<div class="col-md-6">
				<label asp-for="IsActive" class="form-label"></label>
				<input asp-for="IsActive" type="checkbox" class="form-control form-check-input" />
			</div>
		</div>

		<div class="row">
			<div class="col-md-6 text-end">
				<button type="submit" class="btn btn-primary me-2">Save Changes</button>
				<a asp-action="Index" class="btn btn-secondary">Cancel</a>
			</div>
		</div>
	</form>
</div>
