@model Management.Models.Dept

<div class="container mt-4">
    <h1>Delete Department</h1>
    <p>Are you sure you want to delete this Department?</p>
    <dl class="row">
        <dt class="col-sm-3">Department Name</dt>
        <dd class="col-sm-9">@Model.DeptName</dd>

        <dt class="col-sm-3">Create at</dt>
        <dd class="col-sm-9">@Model.CreatedDate</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@(Model.IsActive ? "Active" : "InActive")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DeptId" />
		<button type="submit" class="btn btn-danger">Confirmed Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
